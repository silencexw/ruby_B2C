<h1>支付</h1>
<div class="row">
  <div class="container">
    <div class="page-header">
      <h4><i class="fa fa-credit-card"></i> 支付宝付款</h4>
    </div>
    <p>订单号: <%= @transaction_order.order_no %></p>
    <ul class="list-group">
      <li class="list-group-item">
        <%= image_tag "alipay.png", width: 100 %>
      </li>
    </ul>

    <br />
    <div class="pull-right">
      <form action="<%= pay_transaction_order_path(@transaction_order) %>" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="submit" value="支付" class="btn btn-success btn-lg" />
      </form>
    </div>
  </div>
</div>
