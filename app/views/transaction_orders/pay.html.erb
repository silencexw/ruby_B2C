<h1>支付</h1>
<div class=“row”>
  <div class=“container”><p>订单号: <%= @transaction_order.order_no %></p>

    <div class="payment-options">
      <div class="page-header">
        <h4><i class="fa fa-credit-card"></i> 选择支付方式</h4>
      </div>
      <form id="payment-form" action="<%= pay_transaction_order_path(@transaction_order) %>" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

        <label for="alipay">支付宝支付</label>
        <input type="radio" id="alipay" name="payment_method" value="alipay" checked>
        <%= image_tag "alipay.png", width: 150, height: 100 %><br>

        <label for="wechat">微信支付</label>
        <input type="radio" id="wechat" name="payment_method" value="wechat">
        <%= image_tag "wechat.png", width: 100, height: 100 %><br>

        <input type="submit" value="支付" class="btn btn-success btn-lg"/>
      </form>
    </div>

  </div>
</div>